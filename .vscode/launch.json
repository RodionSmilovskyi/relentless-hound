    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug train",
            "type": "debugpy",
            "request": "launch",
            "program": "package/train",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceFolder}", "WRAPT_DISABLE_EXTENSIONS": "true" },
            "args": ["--validation-episode", "1", "--episodes", "2"]
        },
        {
            "name": "Debug avionics",
            "type": "debugpy",
            "request": "launch",
            "module": "test_drone",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "args": ["--use-gui", "--validation-episode", "1", "--episodes", "2"]
        }
    ]
}