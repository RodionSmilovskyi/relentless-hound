    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug train",
            "type": "debugpy",
            "request": "launch",
            "program": "package/train",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "WRAPT_DISABLE_EXTENSIONS": "true"
            },
            "args": [
                "--validation_episode",
                "5",
                "--episodes",
                "100",
                "--collect_episodes_per_iteration",
                "100",
                "--num_eval_episodes",
                "10",
                "--number_of_parallel_envs",
                "10",
                "--fc_layer_params",
                "20-20",
                "--importance_clipping",
                "0.2"
            ]
        },
        {
            "name": "Debug env",
            "type": "debugpy",
            "request": "launch",
            "module": "test_env",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--use_gui",
                "--episodes",
                "5"
            ]
        }
    ]
}